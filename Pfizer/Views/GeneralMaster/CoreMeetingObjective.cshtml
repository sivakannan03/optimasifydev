                    $("#IsActive").prop('checked', false);
                    return [false, response.responseText];
                }

            }
        },
                {
                    //Delete
                    closeOnEscape: true,
                    recreateForm: true,
                    modal: true,
                    width: 450,
                    beforeShowForm: function (form) {

                        //POP UP Screen Fit Screen

                        var thisForm = $("#delmod" + jQuery("#ajaxGrid")[0].id);
