        else if ($('#lstDMName').val() == 0 || $('#lstDMName').val() == null) {
            $("#lstDMName").css("background-color", "#FFE8E8").css("border", "1px solid #FF6666");
            $('#lstDMName').focus();
            return false;
        }
        if ($('#rdbSummery').prop('checked') != true && ($('#lstPSOName').val() == 0 || $('#lstPSOName').val() == null))
