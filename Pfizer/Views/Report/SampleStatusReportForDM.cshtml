                                    <td class="tb-r2">PSOName<span style="color:red">*</span></td>
                                    <td class="tb-r2">
                                        &nbsp;&nbsp;&nbsp;
                                        @Html.ListBox("lstPSOName", new[]{

                                            new SelectListItem { Text="", Value=""} }, new { @class = "listboxRpt",size="4" })

