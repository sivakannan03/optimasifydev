            $('#Table1').append("<tr><td>" + row.NODENAME + "</td><td>" + row.IsActive + "</td></tr>");

        }
        $(function () { printChrome('prt-container') });
        
    }

    function printChrome(divContainer) {
        
        var printContent = document.getElementById(divContainer);        
