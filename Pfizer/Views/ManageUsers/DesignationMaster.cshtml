@{
    ViewBag.Title = "DesignationMaster";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<script src="~/Content/js/GridExport.js"></script>
<script src="~/Content/js/jquery.printElement.js"></script>
